<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_color_choice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aarondevelops.swagsnap.ColorChoiceActivity">

    <TextView
        android:text="What Colors Fit Best?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/headerText"
        tools:text="What Colors Fit Best?"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="normal|bold"
        android:textSize="30sp" />

    <TextView
        android:text="Pick the three colors you think match your clothes the best!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerText"
        android:layout_centerHorizontal="true"
        android:id="@+id/instructionsText"
        android:layout_marginTop="5dp"
        tools:text="Pick the three colors you think match your clothes the best!" />

    <TextView
        android:layout_below="@+id/instructionsText"
        android:layout_alignStart="@+id/instructionsText"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:id="@+id/firstSwatch"
        android:gravity="center"
        android:textSize="50sp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="onSwatchSelect"
        android:clickable="true"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_below="@+id/firstSwatch"
        android:layout_alignStart="@+id/instructionsText"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        android:id="@+id/secondSwatch"
        android:gravity="center"
        android:textSize="50sp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="onSwatchSelect"
        android:clickable="true"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_below="@+id/secondSwatch"
        android:layout_alignStart="@+id/instructionsText"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        android:id="@+id/thirdSwatch"
        android:gravity="center"
        android:textSize="50sp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="onSwatchSelect"
        android:clickable="true"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_below="@+id/thirdSwatch"
        android:layout_alignStart="@+id/instructionsText"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        android:id="@+id/fourthSwatch"
        android:gravity="center"
        android:textSize="50sp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="onSwatchSelect"
        android:clickable="true"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_below="@+id/instructionsText"
        android:layout_alignEnd="@+id/instructionsText"
        android:layout_marginTop="20dp"
        android:id="@+id/fifthSwatch"
        android:gravity="center"
        android:textSize="50sp"
        android:layout_marginEnd="60dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="onSwatchSelect"
        android:clickable="true"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_below="@+id/fifthSwatch"
        android:layout_alignEnd="@+id/instructionsText"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="15dp"
        android:id="@+id/sixthSwatch"
        android:gravity="center"
        android:textSize="50sp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="onSwatchSelect"
        android:clickable="true"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_below="@+id/sixthSwatch"
        android:layout_alignEnd="@+id/instructionsText"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="15dp"
        android:id="@+id/seventhSwatch"
        android:gravity="center"
        android:textSize="50sp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="onSwatchSelect"
        android:clickable="true"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_below="@+id/seventhSwatch"
        android:layout_alignEnd="@+id/instructionsText"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="15dp"
        android:id="@+id/eighthSwatch"
        android:gravity="center"
        android:textSize="50sp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="onSwatchSelect"
        android:clickable="true"
        android:textStyle="normal|bold" />

    <Button
        android:text="Clear"
        android:textColor="#333333"
        android:textSize="15sp"
        android:background="@drawable/buttonshape"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/clearButton"
        tools:text="Clear"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/instructionsText"
        android:layout_marginStart="10dp"
        android:onClick="onClear" />

    <Button
        android:text="Ok, Done!"
        android:textColor="#333333"
        android:textSize="15sp"
        android:background="@drawable/buttonshape"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/submitButton"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/instructionsText"
        android:layout_marginEnd="10dp"
        android:onClick="onSubmit" />

</RelativeLayout>
